# Simple Dockerfile with latest Python and flexible requirements
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip install --no-cache-dir --upgrade pip

# Install requirements without strict versions first
RUN pip install --no-cache-dir \
    crewai \
    langchain-openai \
    python-dotenv \
    openai \
    pydantic

# Copy application code
COPY . .

# Run the application
CMD ["python", "app.py"]